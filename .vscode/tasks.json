{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: gcc.exe build active file",
            "type": "cppbuild",
            "command": "C:\\mingw64\\bin\\gcc.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-I",
                "E:\\MSMPI\\SDKs\\Include\\",
                "-L",
                "E:\\MSMPI\\SDKs\\Lib\\x64\\",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lmsmpi"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}